<div class="container-fluid mt-2 mb-2">
  <div class="row justify-content-center">
    <div class="col-2">
      <div class="card text-center">
        <div class="card-header">Welcome to Pink Tank</div>
        <div class="card-body">
          <%= form_with url: login_path, method: :post do |form| %>
            <div class="row mb-2">
              <%= form.email_field :email, placeholder: "E-mail", class: "form-control" %>
            </div>
            <div class="row mb-2">
              <%= form.password_field :password, placeholder: "Password", class: "form-control" %>
            </div>
            <%= form.submit "Login", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

