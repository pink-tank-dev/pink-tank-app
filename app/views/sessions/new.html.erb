<div class="container mt-2 mb-2">
  <div class="row">
    <div class="col-6">
      <%= form_with url: login_path, method: :post do |form| %>
        <div class="row">
          <div class="col">
            <%= form.email_field :email, placeholder: "E-mail", class: "form-control" %>
          </div>
          <div class="col">
            <%= form.password_field :password, placeholder: "Password", class: "form-control" %>
          </div>
          <div class="col">
            <%= form.submit "Login", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col offset-4">
      <button type="button" class="btn">
        <%= link_to "Sign Up", new_user_path %>
      </button>
    </div>
  </div>
</div>