<!DOCTYPE html>
<html>
  <% if blob.video? %>
    <%= video_tag url_for(blob.attachable),
      preload: "auto",
      controls: true,
      width: "100%",
      height: "100%" %>
  <% elsif blob.audio? %>
    <%= audio_tag url_for(blob.attachable), 
      autoplay: true,
      controls: true %>
  <% elsif blob.content_type == 'application/pdf' %>
    <embed
      src=<%= url_for(blob.attachable) %>
      width="100%"
      height="500"
      type="application/pdf">
  <% elsif blob.representable? %>
    <%= image_tag url_for(blob.representation(resize_to_limit: [1024, 768])) %>
  <% end %>
</html>
