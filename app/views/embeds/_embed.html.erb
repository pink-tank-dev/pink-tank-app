<% if embed.video? || embed.spotify_album_or_playlist? || embed.soundcloud_playlist? %>
  <%= content_tag :iframe, nil, width: "100%", height: 420, src: embed.source %>
<% elsif embed.spotify_track? || embed.soundcloud_track? %>
  <%= content_tag :iframe, nil, width: "100%", height: 200, src: embed.source %>
<% else %>
  <%= content_tag :iframe, nil, width: "100%", height: 200, src: embed.source %>
<% end %>
