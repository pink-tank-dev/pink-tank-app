<div class="container mt-2 mb-2">
  <h4>Artists</h4>
  <%= link_to "New Artist", new_admin_artist_path %>
  <div class="row">
    <div class="col-6">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @artists.each do |artist| %>
            <tr>
              <th><%= artist.id %></th>
              <td><%= link_to artist.name, admin_artist_path(artist) %></td>
              <td>
                <%= link_to "Posts", admin_artist_posts_path(artist), class: "btn btn-sm btn-primary mr-1" %>
                <%= link_to "Reset password", reset_password_admin_artist_path(artist),
                    method: :put,
                    class: "btn btn-sm btn-primary mr-1" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
