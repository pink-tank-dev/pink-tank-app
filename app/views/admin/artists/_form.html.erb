<%= form_with model: [:admin, @artist], method: @artist.new_record? ? :post : :put do |form| %>
  <div class="row">
    <div class="col-3">
      <div class="form-group mt-1 mb-1">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group mt-1 mb-1">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group mt-1 mb-1">
        <%= form.label :about %>
        <%= form.text_area :about, size: "30x10",class: "form-control" %>
      </div>
    </div>
  </div>
  <%= form.submit @artist.new_record? ? "Create Artist" : "Update Artist", class: "btn btn-primary" %>
<% end %>
