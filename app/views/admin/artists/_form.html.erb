<%= form_with model: [:admin, @artist], method: @artist.new_record? ? :post : :put do |form| %>
  <div class="row">
    <div class="col-3">
      <h5>Basic Info</h5>
      <div class="form-group mt-1 mb-1">
        <%= form.label :avatar %>
        <%= form.file_field :avatar, class: "form-control" %>
      </div>
      <div class="form-group mt-1 mb-1">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group mt-1 mb-1">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group mt-1 mb-1">
        <%= form.label :status %>
        <%= form.select :status, Artist.statuses.map {|k, _| [k.capitalize, k]}, {}, class: "form-select" %>
      </div>
    </div>
    <div class="col-3">
      <h5>Social Media</h5>
      <div id="social_media">
        <%= form.fields_for :social_media do |social_medium| %>
          <%= render "social_medium_fields", f: social_medium %>
        <% end %>
        <div class="links">
          <%= link_to_add_association 'Add', form, :social_media, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-5">
      <div class="form-group mt-1 mb-1">
        <%= form.label :about %>
        <%= form.text_area :about, size: "30x10", class: "form-control" %>
      </div>
      <div class="form-group mt-1 mb-1">
        <%= form.label :statement %>
        <%= form.text_area :statement, size: "30x10", class: "form-control" %>
      </div>
    </div>
  </div>
  <%= form.submit @artist.new_record? ? "Create Artist" : "Update Artist", class: "btn btn-primary" %>
<% end %>
