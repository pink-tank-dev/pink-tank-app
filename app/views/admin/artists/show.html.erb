<div class="container mt-2 mb-2">
  <h5>
    <%= @artist.name %>
    <%= link_to edit_admin_artist_path(@artist) do %>
      <% fa_icon "pencil" %>
    <% end %>
  </h5>
  <div class="row">
    <div class="col-4">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>Email</th>
            <td><%= @artist.email %></td>
          </tr>
          <tr>
            <th>About</th>
            <td><%= @artist.about %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
