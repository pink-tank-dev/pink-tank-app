<div class="container mt-2 mb-2">
  <h4>Users</h4>
  <%= link_to "New User", new_admin_user_path %>
  <div class="row">
    <div class="col-6">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= user.id %></th>
              <td><%= link_to "#{user.name}", admin_user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
