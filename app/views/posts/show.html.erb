<div class="container mt-2 mb-2">
  <%= link_to "#{@artist.name}'s Posts", artist_posts_path(@artist) %>
  <h5>
    <%= @post.title %>
    <%= link_to edit_artist_post_path(@artist, @post) do %>
      <% fa_icon "pencil" %>
    <% end %>
  </h5>
  <div class="row">
    <div class="col-3">
      <%= @post.body %>
    </div>
  </div>
</div>
