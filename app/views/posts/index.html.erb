<div class="container mt-2 mb-2">
  <h3><%= @artist.name%>'s Posts</h3>
  <%= link_to "New Post", new_artist_post_path(@artist) %>
  <table class="table caption-top">
    <caption>Posts</caption>
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Status</th>
        <th>Date Published</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <th><%= post.id %></th>
          <td><%= link_to post.title, artist_post_path(@artist, post) %></td>
          <td>
            <span class="badge rounded-pill bg-<%= post.published? ? "success" : "warning" %>">
              <%= post.status.capitalize %>
            </span>
          </td>
          <td><%= post.published_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
