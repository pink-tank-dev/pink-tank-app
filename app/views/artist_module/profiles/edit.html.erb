<div class="container mt-2 mb-2">
  <%= link_to "Back", artist_module_profile_path %>
  <h3>Edit Profile</h3>
  <%= form_with model: @artist, url: artist_module_profile_path, method: :put do |form| %>
    <div class="row">
      <div class="col-3">
        <div class="form-group mt-1 mb-1">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group mt-1 mb-1">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group mt-1 mb-1">
          <%= form.label :instagram %>
          <div class="input-group">
            <span class="input-group-text" id="artist_instagram">@</span>
            <%= form.text_field :instagram, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-5">
        <div class="form-group mt-1 mb-1">
          <%= form.label :about %>
          <%= form.text_area :about, size: "30x10", class: "form-control" %>
        </div>
        <div class="form-group mt-1 mb-1">
          <%= form.label :statement %>
          <%= form.text_area :statement, size: "30x10", class: "form-control" %>
        </div>
      </div>
    </div>
    <%= form.submit "Update Profile", class: "btn btn-primary" %>
  <% end %>
</div>
